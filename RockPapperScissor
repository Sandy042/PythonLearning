import random

user_input=input("Ready Rock papper scissor (r/p/s)")
options=['ROCK','PAPPER','SCISSOR']
if user_input.upper()=='R':
    user_input='ROCK'
    computer_choice=random.choice(options)
    if user_input==computer_choice:
        print('user choice=' ,user_input)
        print('Computer choice=' ,computer_choice)
        print('Its a tie')
    elif computer_choice=='PAPPER':
        print('user choice=' ,user_input)
        print('Computer choice=' ,computer_choice)
        print("Computer wins")
    elif computer_choice=='SCISSOR':
        print('user choice=' ,user_input)
        print('Computer choice=' ,computer_choice)
        print("User wins")
elif user_input.upper()=='P':
    user_input='PAPPER'
    computer_choice=random.choice(options)
    if user_input==computer_choice:
        print('user choice=' ,user_input)
        print('Computer choice=' ,computer_choice)
        print('Its a tie')
    elif computer_choice=='ROCK':
        print('user choice=',user_input)
        print('Computer choice=', computer_choice)
        print("User wins")
    elif computer_choice=='SCISSOR':
        print('user choice=' ,user_input)
        print('Computer choice=' ,computer_choice)
        print("User wins")
elif user_input.upper()=='S':
    user_input='SCISSOR'
    computer_choice=random.choice(options)
    if user_input==computer_choice:
        print('user choice=' ,user_input)
        print('Computer choice=' ,computer_choice)
        print('Its a tie')
    elif computer_choice=='PAPPER':
        print('user choice=',user_input)
        print('Computer choice=', computer_choice)
        print("User wins")
    elif computer_choice=='ROCK':
        print('user choice=' ,user_input)
        print('Computer choice=' ,computer_choice)
        print("Computer wins")
else:
    print('Invalid Input')
    exit() 




